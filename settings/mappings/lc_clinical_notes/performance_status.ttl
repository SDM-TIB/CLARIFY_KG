@prefix rr: <http://www.w3.org/ns/r2rml#> .
@prefix rml: <http://semweb.mmlab.be/ns/rml#> .
@prefix ql: <http://semweb.mmlab.be/ns/ql#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix schema: <http://schema.org/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix clarify: <http://clarify2020.eu/vocab/> .

<LCPatient>
	rml:logicalSource [ rml:source "/data/data/lc_clinical_notes/performance_status.csv";
						rml:referenceFormulation ql:CSV;
						];
	rr:subjectMap [
		rr:template "http://clarify2020.eu/LCPatient/{EHR}";
	];
	rr:predicateObjectMap [
		rr:predicate clarify:hasPerformanceStatusObservation;
		rr:objectMap [ 
			rr:parentTriplesMap <PerformanceStatusObservation>
		]
	].

<PerformanceStatusObservation>
	rml:logicalSource [ rml:source "/data/data/lc_clinical_notes/performance_status.csv";
						rml:referenceFormulation ql:CSV;
						];
	rr:subjectMap [
		rr:template "http://clarify2020.eu/PerformanceStatusObservation/{ID}";
		rr:class clarify:PerformanceStatusObservation;
	];
	rr:predicateObjectMap [
		rr:predicate clarify:performanceStatusScale;
		rr:objectMap [
			rml:reference "scale";
		]
	];	
	rr:predicateObjectMap [
		rr:predicate clarify:hasValue;
		rr:objectMap [
			rr:template "http://clarify2020.eu/PerformanceStatus/{value}";		
		]
	];
	rr:predicateObjectMap [
		rr:predicate clarify:date;
		rr:objectMap [
			rml:reference "date";
			rr:datatype xsd:date;

		]
	].		